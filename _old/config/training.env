# Configuración para entrenamiento nocturno
# Copia este archivo a .env para usar estas configuraciones

# Base de datos
DB_URL=postgresql+psycopg2://usuario:password@localhost:5432/trading_db

# Configuración de entrenamiento
BT_RETRAIN_MINUTES=60          # Reentrenar cada 60 minutos (más tiempo para backtests históricos)
BT_OOS_DAYS=365                # 365 días de out-of-sample (todo el historial)
BT_INFER_BACKFILL_DAYS=1       # 1 día de inferencia
BT_SEED=42                     # Semilla para reproducibilidad

# Límites de recursos
BT_MAX_CPU=4                   # Máximo 4 cores para entrenamiento
BT_MAX_MEMORY=8192             # Máximo 8GB de RAM

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=logs/training.log

# Configuración de monitoreo
MONITOR_INTERVAL=60            # Monitoreo cada 60 segundos
ALERT_EMAIL=tu_email@ejemplo.com

# Configuración de riesgo
DEFAULT_RISK_PCT=0.003         # 0.3% de riesgo por operación
MAX_LEVERAGE=20                # Leverage máximo
MIN_LEVERAGE=1                 # Leverage mínimo

# Configuración de backtesting
FEES_BPS=2                     # 2 bps de fees
SLIP_BPS=2                     # 2 bps de slippage
MAX_HOLD_BARS=600              # Máximo 600 barras de hold

# Auto-backfill de features (deshabilitado por defecto para sistemas con features en tiempo real)
BT_SKIP_BACKFILL=true
